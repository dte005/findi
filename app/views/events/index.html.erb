
<div class="container-fluid" style="border:1px solid black; height: 50vh;">
  <div class="row" style="boder: 1px solid black;">
    <div class="col-md-6 col-sm-12 col-12" style="border: 1px solid black; height: 50vh;">
      <ul>
      <% @events.each do |event| %>
        <li><%= link_to event.title, event_path(event) %>
          <p><%= event.date %></p>
          <% if event.user == current_user %>
            <p>Owner</p>
          <% else %>
            <p>Invited</p>
          <% end %>
        </li>
      <% end %>
      </ul>
    </div>
    <div class="col-md-6 col-sm-12 col-12" style="border: 1px solid black;">
      <div class="row" style="height:45vh;">Image</div>
      <div class="row justify-content-center align-items-end" style="border: 1px solid red; height:5vh;">
        <div class="col-md-6" style="border: 1px solid black; text-align:center;">
          <% if policy(Event).create? %>
            <%= link_to 'Create Event', new_event_path, class:"btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
