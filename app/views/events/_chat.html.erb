<div style="height: 85vh; background:#f8eee7;">
  <div class="row" style="height:85vh; margin: 0;">
    <div class="col-12 d-flex flex-column justify-content-between chat-groups" style="height: 85vh;">
      <div class="d-flex flex-column flex-grow-1 ml-2 mt-2" style="overflow-y: auto; overflow-x: hidden;">
        <% @messages.each do |message|%>
        <div>
          <% if message.user == current_user %>
          <div class="d-flex flex-column mr-2 mt-2 align-items-end" style="text-align-right;">
              <div style="padding: 10px 10px 1px 10px;"></div>
              <div style="padding:10px;">
                <span style="background:#e5c3ca; padding:10px; border:1px solid lightgrey; border-radius:10px;"><%= message.content %></span>
              </div>
          </div>
          <% else %>
          <div class="d-flex flex-column">
            <div style="padding: 10px 10px 1px 10px;">
              <strong style="color:#5c005c; font-size:12px;"><%= message.user.email %></strong>
            </div>
            <div style="padding:10px;">
              <span style="background:white; padding:10px; border:1px solid lightgrey; border-radius:10px;"><%= message.content %></span>
            </div>
          </div>
          <% end %>
          </div>
        <% end %>
      </div>
      <div style="background:#EEF0F2; padding:10px;">
      <%= simple_form_for [@event, @message], wrapper: :inline_form, html: { class: "form-inline" } do |f|%>
        <div class="flex-grow-1">
        <%= f.input :content, label: false, input_html: { class: "ml-1 mb-1 mt-1 mr-sm-1 w-100" }%>
        </div>
        <%= f.button :button do %>
          <i class="fas fa-paper-plane" style="color:#5c005c; font-size:30px;"></i>
        <% end %>
      <% end %>
      </div>
      <%# <form action="">
      <input type="text" class="chat-input mb-2 ml-2 mr-2">
      </form> %>
    </div>
  </div>
</div>
